{
  "name": "bitbag/pp-client",
  "description": "Poczta Polska SOAP client",
  "type": "project",
  "autoload": {
    "psr-4": {
      "BitBag\\PPClient\\": "src/"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-soap": "*"
  },
  "require-dev": {
    "vimeo/psalm": "^4.24",
    "bitbag/coding-standard": "^1",
    "phpunit/phpunit": "^9.5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
